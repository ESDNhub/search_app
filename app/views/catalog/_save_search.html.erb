<% current_search = session[:history].blank? ? Search.none : Search.where(:id => session[:search]['id'])[0] %>
<%- if current_or_guest_user && current_search.saved?-%>
    <%= button_to t('blacklight.search_history.forget'), forget_search_path(current_search.id), :class => 'btn btn-default' %>
<%- else -%>
    <%= button_to t('blacklight.search_history.save'), save_search_path(current_search.id), :method => :put, :class => 'btn btn-default' %>
<%- end -%>

