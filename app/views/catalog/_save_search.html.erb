<% searches = session[:history].blank? ? Search.none : Search.where(:id => session[:history]).order("updated_at desc") %>
<%- if current_or_guest_user && searches[0].saved?-%>
    <%= button_to t('blacklight.search_history.forget'), forget_search_path(searches[0].id), :class => 'btn btn-default' %>
<%- else -%>
    <%= button_to t('blacklight.search_history.save'), save_search_path(searches[0].id), :method => :put, :class => 'btn btn-default' %>
<%- end -%>

